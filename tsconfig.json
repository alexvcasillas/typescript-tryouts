{
  "version": "2.4.1",
  "compilerOptions": {
    "target": "es5",
    "sourceMap": true,
    "declaration": true,
    "module": "es2015",
    "removeComments": false,
    "outDir": "lib/",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "importHelpers": true
  },
  "files": ["src/index.ts"]
}
